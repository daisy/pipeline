        -->
        <dependency>
            <groupId>org.apache.httpcomponents</groupId>
            <artifactId>httpclient-osgi</artifactId>
            <scope>test</scope>
        </dependency>
        <!--
            FIXME: use for compilation
        -->
        <dependency>
            <groupId>org.apache.httpcomponents</groupId>
            <artifactId>httpcore-osgi</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.daisy.pipeline</groupId>
            <artifactId>webservice</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.daisy.pipeline</groupId>
            <artifactId>calabash-adapter</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.daisy.pipeline</groupId>
            <artifactId>modules-registry</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.daisy.pipeline</groupId>
            <artifactId>framework-volatile</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.daisy.pipeline</groupId>
            <artifactId>woodstox-osgi-adapter</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.daisy.pipeline</groupId>
            <artifactId>pax-exam-helper</artifactId>
            <version>2.5.0</version>
            <scope>test</scope>
        </dependency>
        <!--
            needed because org.daisy.pipeline.client.utils.XPath.xpath() uses
            javax.xml.xpath.XPathFactory.newInstance() which finds
            org.daisy.common.xpath.saxon.impl.XPathFactoryImpl_SPI
        -->
        <dependency>
            <groupId>org.daisy.pipeline</groupId>
            <artifactId>ds-to-spi-runtime</artifactId>
            <version>1.1.1</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
