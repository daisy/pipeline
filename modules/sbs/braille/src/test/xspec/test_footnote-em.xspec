<?xml version="1.0" encoding="utf-8"?>
<x:description xmlns:x="http://www.jenitennison.com/xslt/xspec"
	       xmlns:dtb="http://www.daisy.org/z3986/2005/dtbook/"
	       xmlns:brl="http://www.daisy.org/z3986/2009/braille/"
               stylesheet="../../main/resources/xml/block-translate.xsl"
	       preserve-space="dtb:p dtb:byline dtb:author dtb:li dtb:lic dtb:doctitle dtb:docauthor dtb:span dtb:em dtb:strong brl:emph dtb:line dtb:h1 dtb:h2 dtb:h3 dtb:h4 dtb:h5 dtb:h6">

  <x:param name="contraction-grade">2</x:param>
  <x:param name="hyphenator">(locale:de)</x:param>
  <x:param name="ascii-braille">yes</x:param>

    <x:param name="footnote_placement" select="'standard'"/>

    <x:scenario label="FN ohne Satzzeichen (adjazentes EM)" pending="Needs to be tested after formatting with xprocspec">
      <x:context>
        <dtb:p xml:lang="de">bla<dtb:noteref idref="#fn1">*1</dtb:noteref> <dtb:em>»Ein Mensch«</dtb:em></dtb:p>
      </x:context>
      <x:expect label="braille">
y P
 BLA'*#A
* 
  __(6 MC5)'.</x:expect>
    </x:scenario>

    <x:scenario label="FN mit Satzzeichen (adjazentes EM)" pending="Needs to be tested after formatting with xprocspec">
      <x:context>
        <dtb:p xml:lang="de">bla<dtb:noteref idref="#fn1">*1</dtb:noteref>, <dtb:em>»Ein Mensch«</dtb:em></dtb:p>
      </x:context>
      <x:expect label="braille">
y P
 BLA'*#A,
* 
 __(6 MC5)'.</x:expect>
    </x:scenario>

    <x:scenario label="FN mit Satzzeichen (EM als Ancestor)" pending="Needs to be tested after formatting with xprocspec">
      <x:context>
        <dtb:p xml:lang="de"><dtb:em>bla<dtb:noteref idref="#fn1">*1</dtb:noteref>, bla bla</dtb:em></dtb:p>
      </x:context>
      <x:expect label="braille">
y P
 __BLA'*#A,
* 
 BLA BLA'.</x:expect>
    </x:scenario>

</x:description>
