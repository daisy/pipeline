<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.jenitennison.com/xslt/xspec"
    stylesheet="../../main/resources/xml/xslt/namespace-fixup.xsl">

    <x:scenario label="HTML">
        <x:scenario label="in the default namespace">
            <x:context>
                <html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
                    <head/>
                    <body/>
                </html>
            </x:context>
            <x:expect label="should be converted as-is">
                <html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
                    <head/>
                    <body/>
                </html>
            </x:expect>
        </x:scenario>
        <x:scenario label="in no namespace">
            <x:context>
                <html lang="en">
                    <head/>
                    <body/>
                </html>
            </x:context>
            <x:expect label="should be assigned the default HTML namespace">
                <html xmlns="http://www.w3.org/1999/xhtml" lang="en">
                    <head/>
                    <body/>
                </html>
            </x:expect>
        </x:scenario>
        <x:scenario label="with extra namespaces">
            <x:context>
                <html xmlns="http://www.w3.org/1999/xhtml" xmlns:foobar="foobar">
                    <head/>
                    <body/>
                </html>
            </x:context>
            <x:expect label="should be cleaned">
                <html xmlns="http://www.w3.org/1999/xhtml">
                    <head/>
                    <body/>
                </html>
            </x:expect>
        </x:scenario>
        <x:scenario label="with epub:type attributes">
            <x:context>
                <html xmlns="http://www.w3.org/1999/xhtml" xmlns:epub="http://www.idpf.org/2007/ops">
                    <head/>
                    <body epub:type="foobar"/>
                </html>
            </x:context>
            <x:expect label="should keep the EPUB namespace">
                <html xmlns="http://www.w3.org/1999/xhtml" xmlns:epub="http://www.idpf.org/2007/ops">
                    <head/>
                    <body epub:type="foobar"/>
                </html>
            </x:expect>
        </x:scenario>
    </x:scenario>

    <x:scenario label="MathML">
        <x:scenario label="with a namespace">
            <x:context>
                <html>
                    <body>
                        <math xmlns="http://www.w3.org/1998/Math/MathML">
                            <mrow>
                                <mrow>
                                    <mi>x</mi>
                                    <mo>+</mo>
                                    <mi>y</mi>
                                </mrow>
                                <mo>=</mo>
                                <mn>2</mn>
                            </mrow>
                        </math>
                    </body>
                </html>
            </x:context>
            <x:expect label="should be converted as-is">
                <html xmlns="http://www.w3.org/1999/xhtml">
                    <body>
                        <math xmlns="http://www.w3.org/1998/Math/MathML">
                            <mrow>
                                <mrow>
                                    <mi>x</mi>
                                    <mo>+</mo>
                                    <mi>y</mi>
                                </mrow>
                                <mo>=</mo>
                                <mn>2</mn>
                            </mrow>
                        </math>
                    </body>
                </html>
            </x:expect>
        </x:scenario>
        <x:scenario label="with no namespace">
            <x:context>
                <html>
                    <body>
                        <math>
                            <mrow>
                                <mrow>
                                    <mi>x</mi>
                                    <mo>+</mo>
                                    <mi>y</mi>
                                </mrow>
                                <mo>=</mo>
                                <mn>2</mn>
                            </mrow>
                        </math>
                    </body>
                </html>
            </x:context>
            <x:expect label="should be assigned the MathML namespace">
                <html xmlns="http://www.w3.org/1999/xhtml">
                    <body>
                        <math xmlns="http://www.w3.org/1998/Math/MathML">
                            <mrow>
                                <mrow>
                                    <mi>x</mi>
                                    <mo>+</mo>
                                    <mi>y</mi>
                                </mrow>
                                <mo>=</mo>
                                <mn>2</mn>
                            </mrow>
                        </math>
                    </body>
                </html>
            </x:expect>
        </x:scenario>
        <x:scenario label=":: when an annotation">
            <x:scenario label="is encoded as 'text/html'">
                <x:context>
                    <html>
                        <body>
                            <math>
                                <annotation-xml encoding="text/html">
                                    <span>hello</span>
                                </annotation-xml>
                            </math>
                        </body>
                    </html>
                </x:context>
                <x:expect label="its content should be namespaced as HTML">
                    <html xmlns="http://www.w3.org/1999/xhtml">
                        <body>
                            <m:math xmlns:m="http://www.w3.org/1998/Math/MathML">
                                <m:annotation-xml encoding="text/html">
                                    <span>hello</span>
                                </m:annotation-xml>
                            </m:math>
                        </body>
                    </html>
                </x:expect>
            </x:scenario>
            <x:scenario label="is encoded as 'application/xhtml+xml'">
                <x:context>
                    <html>
                        <body>
                            <math>
                                <annotation-xml encoding="application/xhtml+xml">
                                    <span>hello</span>
                                </annotation-xml>
                            </math>
                        </body>
                    </html>
                </x:context>
                <x:expect label="its content should be namespaced as HTML">
                    <html xmlns="http://www.w3.org/1999/xhtml">
                        <body>
                            <m:math xmlns:m="http://www.w3.org/1998/Math/MathML">
                                <m:annotation-xml encoding="application/xhtml+xml">
                                    <span>hello</span>
                                </m:annotation-xml>
                            </m:math>
                        </body>
                    </html>
                </x:expect>
            </x:scenario>
        </x:scenario>
    </x:scenario>

    <x:scenario label="SVG">
        <x:scenario label="with a namespace">
            <x:context>
                <html>
                    <body>
                        <svg xmlns="http://www.w3.org/2000/svg">
                            <foo/>
                        </svg>
                    </body>
                </html>
            </x:context>
            <x:expect label="should be converted as-is">
                <html xmlns="http://www.w3.org/1999/xhtml">
                    <body>
                        <svg xmlns="http://www.w3.org/2000/svg">
                            <foo/>
                        </svg>
                    </body>
                </html>
            </x:expect>
        </x:scenario>
        <x:scenario label="with no namespace">
            <x:context>
                <html>
                    <body>
                        <svg>
                            <foo/>
                        </svg>
                    </body>
                </html>
            </x:context>
            <x:expect label="should be assigned the SVG namespace">
                <html xmlns="http://www.w3.org/1999/xhtml">
                    <body>
                        <svg xmlns="http://www.w3.org/2000/svg">
                            <foo/>
                        </svg>
                    </body>
                </html>
            </x:expect>
        </x:scenario>
        <x:scenario label="with inner HTML content">
            <x:scenario label="in 'foreignObject' elements">
                <x:context>
                    <html>
                        <body>
                            <svg>
                                <foreignObject>
                                    <p>hello</p>
                                </foreignObject>
                            </svg>
                        </body>
                    </html>
                </x:context>
                <x:expect label="should use the HTML namespace for the inner content">
                    <html xmlns="http://www.w3.org/1999/xhtml">
                        <body>
                            <svg:svg xmlns:svg="http://www.w3.org/2000/svg">
                                <svg:foreignObject>
                                    <p>hello</p>
                                </svg:foreignObject>
                            </svg:svg>
                        </body>
                    </html>
                </x:expect>
            </x:scenario>
            <x:scenario label="in 'title' elements">
                <x:context>
                    <html>
                        <body>
                            <svg>
                                <title>
                                    <p>hello</p>
                                </title>
                            </svg>
                        </body>
                    </html>
                </x:context>
                <x:expect label="should use the HTML namespace for the inner content">
                    <html xmlns="http://www.w3.org/1999/xhtml">
                        <body>
                            <svg:svg xmlns:svg="http://www.w3.org/2000/svg">
                                <svg:title>
                                    <p>hello</p>
                                </svg:title>
                            </svg:svg>
                        </body>
                    </html>
                </x:expect>
            </x:scenario>
            <x:scenario label="in 'desc' elements">
                <x:context>
                    <html>
                        <body>
                            <svg>
                                <desc>
                                    <p>hello</p>
                                </desc>
                            </svg>
                        </body>
                    </html>
                </x:context>
                <x:expect label="should use the HTML namespace for the inner content">
                    <html xmlns="http://www.w3.org/1999/xhtml">
                        <body>
                            <svg:svg xmlns:svg="http://www.w3.org/2000/svg">
                                <svg:desc>
                                    <p>hello</p>
                                </svg:desc>
                            </svg:svg>
                        </body>
                    </html>
                </x:expect>
            </x:scenario>
        </x:scenario>
    </x:scenario>
    
    <x:scenario label="Remove non-XHTML namespaces">
        <x:context>
            <html xmlns="http://www.w3.org/1999/xhtml">
                <body id="body">
                    text
                    <!-- comment -->
                    <![CDATA[CDATA]]>
                    <non-xhtml xmlns="http://example.net/non-xhtml" xmlns:other="http://example.net/non-xhtml/other-namespace">
                        <p>xmlns --&gt; inside non-xhtml</p>
                        <other:p>xmlns:other --&gt; inside non-xhtml</other:p>
                    </non-xhtml>
                </body>
            </html>
        </x:context>
        <x:expect label="Non-XHTML namespace should be removed">
            <html xmlns="http://www.w3.org/1999/xhtml">
                <body id="body">
                    text
                    <!-- comment -->
                    <![CDATA[CDATA]]>
                    <non-xhtml>
                        <p>xmlns --&gt; inside non-xhtml</p>
                        <p>xmlns:other --&gt; inside non-xhtml</p>
                    </non-xhtml>
                </body>
            </html>
        </x:expect>
    </x:scenario>
    
</x:description>
