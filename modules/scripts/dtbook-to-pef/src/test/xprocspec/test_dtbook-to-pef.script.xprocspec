      <x:option name="temp-dir" select="resolve-uri('hauy_reset/temp-dir',$temp-dir)"/>
      <x:option name="stylesheet" select="'../resources/reset.css ../resources/style.css'"/>
      <x:option name="show-braille-page-numbers" select="'false'"/>
