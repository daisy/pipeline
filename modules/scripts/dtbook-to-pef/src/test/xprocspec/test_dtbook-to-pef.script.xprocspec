  <x:scenario label="test hauy_valid.xml with default.css">
    <x:call step="px:dtbook-to-pef.script">
      <x:input port="source">
        <x:document type="file" href="../resources/hauy_valid.xml"/>
      </x:input>
      <x:option name="output-dir" select="''"/>
      <x:option name="include-pef" select="'true'"/>
      <x:option name="pef-output-dir" select="resolve-uri('hauy/output-dir',$temp-dir)"/>
      <x:option name="preview-output-dir" select="resolve-uri('hauy/output-dir',$temp-dir)"/>
      <x:option name="temp-dir" select="resolve-uri('hauy/temp-dir',$temp-dir)"/>
    </x:call>
    <x:context label="the output directory contents">
      <x:document type="directory" base-uri="temp-dir" href="hauy/output-dir/"/>
    </x:context>
    <x:expect label="Exactly one PEF file should be present in the output directory" type="xpath"
              test="count(/*/*[ends-with(@name,'.pef')])" equals="1"/>
  </x:scenario>
  
  <x:scenario label="test default.css + reset.css + style.css">
    <x:call step="px:dtbook-to-pef.script">
      <x:input port="source">
        <x:document type="inline">
