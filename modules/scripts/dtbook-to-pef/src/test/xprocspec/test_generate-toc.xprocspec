                        <head>
                            <style media="embossed" type="text/x-scss">
                                @xslt "../../main/resources/css/generate-toc.xsl" {
                                    depth: 2;
                                    exclude-class: 'exclude';
                                    document-toc-id: 'generated-document-toc';
                                }
                            </style>
