			<x:document type="inline" base-uri="temp-dir">
				<d:fileset>
					<d:file href="epub3/out/epub/EPUB/content-1.xhtml" media-type="application/xhtml+xml"/>
					<d:file href="epub3/out/epub/EPUB/content-2.xhtml" media-type="application/xhtml+xml"/>
