    <x:scenario label="test-in-memory">
        <x:call step="px:fileset-filter">
            <x:option name="href" select="resolve-uri('samples/fileset2/e.xml')"/>
            <x:input port="source">
                <x:document type="inline">
                    <d:fileset>
                        <d:file href="samples/fileset/test.xml"/>
                        <d:file href="samples/fileset2/e.xml"/>
                    </d:fileset>
                </x:document>
            </x:input>
            <x:input port="source.in-memory">
                <x:document type="file" href="samples/fileset/test.xml"/>
                <x:document type="file" href="samples/fileset2/e.xml"/>
            </x:input>
        </x:call>
        <x:context label="the result port">
            <x:document type="port" port="result"/>
        </x:context>
        <x:expect label="There should be exactly one file in the result fileset" type="xpath" test="count(//d:file)" equals="1"/>
        <x:expect label="Only the e.xml file should be present" type="xpath"
                  test="//d:file/resolve-uri(@href,base-uri(.))" equals="resolve-uri('samples/fileset2/e.xml',$test-base-uri)"/>
        <x:context label="the result.in-memory port">
            <x:document type="port" port="result.in-memory"/>
        </x:context>
        <x:expect label="There should be exactly one document on the result.in-memory port" type="count" min="1" max="1"/>
        <x:expect label="Only the e.xml file should be present" type="xpath"
                  test="base-uri(/*)" equals="resolve-uri('samples/fileset2/e.xml',$test-base-uri)"/>
    </x:scenario>

