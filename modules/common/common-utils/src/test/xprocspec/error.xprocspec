      <x:input port="error">
        <x:document type="inline">
          <c:errors>
            <c:error code="ERR">foobar</c:error>
          </c:errors>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="the error">
      <x:document type="errors" select="/*/c:error"/>
    </x:context>
    <x:expect label="the error" type="compare">
      <x:document type="inline">
        <c:error code="ERR">foobar</c:error>
      </x:document>
    </x:expect>
  </x:scenario>

