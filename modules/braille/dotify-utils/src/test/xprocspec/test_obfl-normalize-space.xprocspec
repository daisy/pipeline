      <p:choose>
        <p:when test="$skip-xslt">
          <p:identity/>
        </p:when>
        <p:otherwise>
          <p:xslt>
            <p:input port="stylesheet">
              <p:document href="../../main/resources/xml/obfl-normalize-space.xsl"/>
            </p:input>
            <p:input port="parameters">
              <p:empty/>
            </p:input>
          </p:xslt>
        </p:otherwise>
      </p:choose>
      <pxi:obfl-normalize-space-2/>
    </p:declare-step>
  </x:script>

