<?xml version="1.0" encoding="utf-8"?>
<x:description xmlns:x="http://www.jenitennison.com/xslt/xspec"
               xmlns:css="http://www.daisy.org/ns/pipeline/braille-css"
               stylesheet="../../main/resources/xml/make-pseudo-elements.xsl">
  
  <x:scenario label="test_01">
    <x:context>
      <doc>
        <body>
          <p style="display: block" css:before="display: block; margin-left: 2; content: 'bar'">
            foo
          </p>
        </body>
      </doc>
    </x:context>
    <x:expect label="result">
      <doc>
        <body>
          <p style="display: block">
            <css:before style="display: block; margin-left: 2; content: 'bar'" name="p::before"/>
            foo
          </p>
        </body>
      </doc>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_02">
    <x:context>
      <doc>
        <body>
          <p foo="bar" css:after="content: attr(bar)">
            foo
          </p>
        </body>
      </doc>
    </x:context>
    <x:expect label="result">
      <doc>
        <body>
          <p foo="bar">
            foo
          <css:after style="content: attr(bar)" name="p::after"/>
          </p>
        </body>
      </doc>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_03">
    <x:context>
      <doc>
        <body>
          <p css:after="content: 'bar'" css:duplicate="flow: abc">
            foo
          </p>
        </body>
      </doc>
    </x:context>
    <x:expect label="result">
      <doc>
        <body>
          <p css:id="...">
            foo
          <css:after style="content: 'bar'" name="p::after"/>
          </p>
          <css:duplicate css:anchor="..." style="flow: abc" name="p::duplicate">
            foo
          </css:duplicate>
        </body>
      </doc>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_04">
    <x:context>
      <doc>
        <body>
          <p css:flow="footnotes" css:footnote-call="content:'aaa'"/>
        </body>
      </doc>
    </x:context>
    <x:expect label="result">
      <doc>
        <body>
          <p css:id="..." css:flow="footnotes"/>
          <css:footnote-call css:anchor="..." style="content:'aaa'" name="p::footnote-call"/>
        </body>
      </doc>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_05">
    <x:context>
      <doc>
        <body>
          <p css:alternate="content: 'foo'" css:alternate-2="content: 'bar'">
            foo
          </p>
        </body>
      </doc>
    </x:context>
    <x:expect label="result">
      <doc>
        <body>
          <p css:id="...">
            foo
          </p>
          <css:alternate css:anchor="..." style="content: 'foo'" name="p::alternate"/>
          <css:alternate css:anchor="..." style="content: 'bar'" name="p::alternate(2)"/>
        </body>
      </doc>
    </x:expect>
  </x:scenario>
  
</x:description>
