<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:px="http://www.daisy.org/ns/pipeline/xproc"
               script="../../main/resources/xml/apply-stylesheets.xpl">

    <x:scenario label="processing instruction, stylesheet parameters">
        <x:call step="px:apply-stylesheets">
            <x:input port="source">
                <x:document type="file" href="../resources/test_apply-stylesheets_1.xml"/>
            </x:input>
            <x:param port="parameters" name="uppercase" select="'true'"/>
        </x:call>
        <x:context label="result">
            <x:document type="port" port="result"/>
        </x:context>
        <x:expect label="result" type="compare">
            <x:document type="inline">
                <div>FOOBAR</div>
            </x:document>
        </x:expect>
    </x:scenario>

    <x:scenario label="wrong order (scss before xslt)">
        <x:call step="px:apply-stylesheets">
            <x:input port="source">
                <x:document type="inline">
                    <div>foobar</div>
                </x:document>
            </x:input>
            <x:option name="stylesheets" select="'../resources/stylesheet_2.scss ../resources/stylesheet_1.xsl'"/>
        </x:call>
        <x:context label="errors">
            <x:document type="errors"/>
        </x:context>
        <x:expect type="count" label="there should be errors" min="1"/>
        <x:expect type="xpath" label="the error BRL01 should be thrown" test="/*/*/@code" equals="'BRL01'"/>
    </x:scenario>

    <x:scenario label="first xslt and then scss, with stylesheet parameters">
        <x:call step="px:apply-stylesheets">
            <x:input port="source">
                <x:document type="inline">
                    <div>foobar</div>
                </x:document>
            </x:input>
            <x:option name="stylesheets" select="'../resources/stylesheet_1.xsl ../resources/stylesheet_2.scss'"/>
            <x:param port="parameters" name="uppercase" select="'true'"/>
        </x:call>
        <x:context label="result">
            <x:document type="port" port="result"/>
        </x:context>
        <x:expect label="result" type="compare">
            <x:document type="inline">
                <div style="text-transform: uppercase;">FOOBAR</div>
            </x:document>
        </x:expect>
    </x:scenario>

    <x:scenario label="xml-stylesheet PI, link element, style element, style attributes, and stylesheets option">
        <x:call step="px:apply-stylesheets">
            <x:input port="source">
                <x:document type="file" href="../resources/test_apply-stylesheets_2.xml"/>
            </x:input>
            <x:option name="stylesheets" select="resolve-uri('../resources/stylesheet_5.scss')"/>
        </x:call>
        <x:scenario label="no filter">
            <x:call/>
            <x:context label="result">
                <x:document type="port" port="result"/>
            </x:context>
            <x:expect label="result" type="compare">
                <x:document type="inline">
                    <html>
                        <head>
                            <link type="text/x-scss" rel="stylesheet" href="stylesheet_4.scss" media="embossed"/>
                            <style media="embossed" type="text/css">
            body {
                hyphens: auto
            }
        </style>
                        </head>
                        <body style="hyphens: auto;">
                            <h1 style="display: block; text-transform: foo;"/>
                            <p style="border-bottom-align: center; border-bottom-pattern: ⠒; border-bottom-style: none; border-bottom-width: 1; border-top-align: center; border-top-pattern: ⠒; border-top-style: none; border-top-width: 1; display: block; margin-left: 2; margin-right: 1; padding-left: 2; padding-right: 1; padding-top: 1;"/>
                        </body>
                    </html>
                </x:document>
            </x:expect>
        </x:scenario>
        <x:scenario label="only css">
            <x:call>
                <x:option name="type" select="'text/css'"/>
            </x:call>
            <x:context label="result">
                <x:document type="port" port="result"/>
            </x:context>
            <x:expect label="result" type="compare">
                <x:document type="inline">
                    <html>
                        <head>
                            <link type="text/x-scss" rel="stylesheet" href="stylesheet_4.scss" media="embossed"/>
                            <style media="embossed" type="text/css">
            body {
                hyphens: auto
            }
        </style>
                        </head>
                        <body style="hyphens: auto;">
                            <h1 style="display: block; text-transform: foo;"/>
                            <p style="display: block;"/>
                        </body>
                    </html>
                </x:document>
            </x:expect>
        </x:scenario>
        <x:scenario label="only print">
            <x:call>
                <x:option name="media" select="'print'"/>
            </x:call>
            <x:context label="result">
                <x:document type="port" port="result"/>
            </x:context>
            <x:expect label="result" type="compare">
                <x:document type="inline">
                    <html>
                        <head>
                            <link type="text/x-scss" rel="stylesheet" href="stylesheet_4.scss" media="embossed"/>
                            <style media="embossed" type="text/css">
            body {
                hyphens: auto
            }
        </style>
                        </head>
                        <body>
                            <h1/>
                            <p/>
                        </body>
                    </html>
                </x:document>
            </x:expect>
        </x:scenario>
    </x:scenario>

    <x:scenario label="css with @xslt rule">
        <x:call step="px:apply-stylesheets">
            <x:input port="source">
                <x:document type="inline">
                    <html>
                        <head>
                            <style media="embossed" type="text/x-scss">
                                @xslt "../resources/stylesheet_1.xsl" {
                                  uppercase: "#{$uppercase}";
                                }
                            </style>
                        </head>
                        <body>
                            <h1>foobar</h1>
                        </body>
                    </html>
                </x:document>
            </x:input>
            <x:param port="parameters" name="uppercase" select="'true'"/>
        </x:call>
        <x:context label="result">
            <x:document type="port" port="result" select="//body"/>
        </x:context>
        <x:expect label="result" type="compare">
            <x:document type="inline">
                <body>
                    <h1>FOOBAR</h1>
                </body>
            </x:document>
        </x:expect>
    </x:scenario>
    
</x:description>
