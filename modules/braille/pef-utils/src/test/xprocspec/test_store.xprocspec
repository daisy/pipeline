  <x:scenario label="test_05">
    <x:documentation>
      Tests that a custom file format can be specified using the "file-format" and "pad" options.
    </x:documentation>
    <x:call step="px:pef-store">
      <x:input port="source">
        <x:document type="inline">
          <pef xmlns="http://www.daisy.org/ns/2008/pef" version="2008-1">
            <body>
              <volume cols="10" rows="5" rowgap="0" duplex="true">
                <section>
                  <page>
                    <row>⠋⠕⠕</row>
                  </page>
                  <page>
                    <row>⠃⠁⠗</row>
                  </page>
                </section>
              </volume>
            </body>
          </pef>
        </x:document>
      </x:input>
      <x:option name="file-format" select="'(line-breaks:UNIX)
                                            (page-breaks:&quot;---&quot;)
                                            (table:&quot;org.daisy.braille.impl.table.DefaultTableProvider.TableType.EN_US&quot;)
                                            (pad:BOTH)'"/>
      <x:option name="output-dir" select="resolve-uri('test_05/', $temp-dir)"/>
      <x:option name="single-volume-name" select="'text'"/>
    </x:call>
    <x:context label="result file">
      <x:document type="file" method="text" base-uri="temp-dir" href="test_05/text.brf"/>
    </x:context>
    <x:expect label="result file" type="compare" normalize-space="false">
      <x:document type="file" method="text" href="../resources/test_store_05.brf"/>
    </x:expect>
  </x:scenario>
  
