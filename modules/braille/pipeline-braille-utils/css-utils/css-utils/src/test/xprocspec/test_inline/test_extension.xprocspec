<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://www.daisy.org/ns/xprocspec/xprocspec.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:css="http://www.daisy.org/ns/pipeline/braille-css"
               script="../../../main/resources/xml/inline.xpl">
  
  <!--
      Custom properties
  -->
  <x:scenario label="test_01">
    <x:call step="css:inline">
      <x:input port="source">
        <x:document type="inline">
          <document>
            <head>
              <style media="embossed" type="text/css">
                p#1 { foo: bar }
                p#2 { -x-foo: bar }
              </style>
            </head>
            <body>
              <p id="1"/>
              <p id="2"/>
            </body>
          </document>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result" select="//body"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <body>
          <p id="1"/>
          <p id="2" style="-x-foo: bar;"/>
        </body>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <!--
      Custom values
  -->
  <x:scenario label="test_02">
    <x:call step="css:inline">
      <x:input port="source">
        <x:document type="inline">
          <document>
            <head>
              <style media="embossed" type="text/css">
                p#1 { display: foo }
                p#2 { display: -x-foo }
              </style>
            </head>
            <body>
              <p id="1"/>
              <p id="2"/>
            </body>
          </document>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result" select="//body"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <body>
          <p id="1"/>
          <p id="2" style="display: -x-foo;"/>
        </body>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <!--
      Custom functions
  -->
  <x:scenario label="test_03">
    <x:call step="css:inline">
      <x:input port="source">
        <x:document type="inline">
          <document>
            <head>
              <style media="embossed" type="text/css">
                p#1 { content: foo(bar) }
                p#2 { content: -x-foo(bar) }
                p#3 { content: -x-foo(bar, '⠿') }
              </style>
            </head>
            <body>
              <p id="1"/>
              <p id="2"/>
              <p id="3"/>
            </body>
          </document>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result" select="//body"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <body>
          <p id="1"/>
          <p id="2" style="content: -x-foo(bar);"/>
          <p id="3" style="content: -x-foo(bar, '⠿');"/>
        </body>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <!--
      Custom pseudo elements
  -->
  <x:scenario label="test_04">
    <x:call step="css:inline">
      <x:input port="source">
        <x:document type="inline">
          <document>
            <head>
              <style media="embossed" type="text/css">
                p#1::foo { display: block }
                p#2::-x-foo { display: block }
              </style>
            </head>
            <body>
              <p id="1"/>
              <p id="2"/>
            </body>
          </document>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result" select="//body"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <body>
          <p id="1"/>
          <p id="2" style="::-x-foo { display: block; }"/>
        </body>
      </x:document>
    </x:expect>
  </x:scenario>
    
</x:description>
