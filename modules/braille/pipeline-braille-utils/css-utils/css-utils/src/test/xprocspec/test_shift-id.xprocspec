<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:p="http://www.w3.org/ns/xproc"
               xmlns:css="http://www.daisy.org/ns/pipeline/braille-css"
               script="../../main/resources/xml/shift-id.xpl">
  
  <x:scenario label="test_01">
    <x:call step="css:shift-id">
      <x:input port="source">
        <x:document type="inline">
          <_>
            <css:_ css:id="a">
              <css:_ css:id="b"/>
            </css:_>
            <css:box css:id="c"/>
            <css:box/>
          </_>
        </x:document>
        <x:document type="inline">
          <css:_ css:flow="foo">
            <css:box css:anchor="a"/>
          </css:_>
        </x:document>
        <x:document type="inline">
          <_>
            <css:counter name="x" target="b"/>
          </_>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <_>
          <css:_>
            <css:_/>
          </css:_>
          <css:box css:id="c"/>
          <css:box/>
        </_>
      </x:document>
      <x:document type="inline">
        <css:_ css:flow="foo">
          <css:box css:anchor="c"/>
        </css:_>
      </x:document>
      <x:document type="inline">
        <_>
          <css:counter name="x" target="c"/>
        </_>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_02">
    <x:call step="css:shift-id">
      <x:input port="source">
        <x:document type="inline">
          <css:box type="block">
            <css:box type="inline">
              ⠤⠤⠤
              <css:_ css:id="a"/>
              ⠤⠤⠤
              <css:_ css:id="b"/>
              ⠤⠤⠤
            </css:box>
          </css:box>
        </x:document>
        <x:document type="inline">
          <css:_ css:flow="footnotes">
            <css:box type="block" css:anchor="a"/>
            <css:box type="block" css:anchor="b"/>
          </css:_>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <css:box type="block">
          <css:box type="inline">
            ⠤⠤⠤
            <css:_ css:id="a"/>
            ⠤⠤⠤
            <css:_ css:id="b"/>
            ⠤⠤⠤
          </css:box>
        </css:box>
      </x:document>
      <x:document type="inline">
        <css:_ css:flow="footnotes">
          <css:box type="block" css:anchor="a"/>
          <css:box type="block" css:anchor="b"/>
        </css:_>
      </x:document>
    </x:expect>
  </x:scenario>
  
</x:description>
