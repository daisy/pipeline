<?xml version="1.0" encoding="utf-8"?>
<?xml-model href="http://www.daisy.org/ns/xprocspec/xprocspec.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:css="http://www.daisy.org/ns/pipeline/braille-css"
               script="../../../main/resources/xml/inline.xpl">
  
  <x:scenario label="test_01">
    <x:documentation>
      Demonstrates bug that causes Unicode characters 2800-28FF not to be recognized on Windows.
    </x:documentation>
    <x:call step="css:inline">
      <x:input port="source">
        <x:document type="inline">
          <document>
            <head>
              <style media="embossed" type="text/css">
                p {
                  display: block;
                  border-bottom: ⠒;
                }
              </style>
            </head>
            <body>
              <p/>
            </body>
          </document>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result" select="//body"/>
    </x:context>
    <x:expect label="the result is wrong" type="compare">
      <x:document type="inline">
        <body>
          <p style="display: block;"/>
        </body>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_02">
    <x:documentation>
      Demonstrates that a SASS style sheet with non-ASCII characters causes a parse error on
      Windows.
    </x:documentation>
    <x:call step="css:inline">
      <x:input port="source">
        <x:document type="inline">
          <document>
            <head>
              <!--
                  sass_8.scss
                  ===========
                  p {
                    display: block;
                    border-bottom: ⠒;
                  }
              -->
              <link type="text/css" rel="stylesheet" href="../../resources/sass/sass_8.scss" media="embossed"/>
            </head>
            <body>
              <p/>
            </body>
          </document>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result" select="//body"/>
    </x:context>
    <x:expect label="the result is wrong" type="compare">
      <x:document type="inline">
        <body>
          <p/>
        </body>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_03">
    <x:documentation>
      Demonstrates that a SASS style sheet with non-ASCII characters causes a parse error on
      Windows, even if those characters are commented out.
    </x:documentation>
    <x:call step="css:inline">
      <x:input port="source">
        <x:document type="inline">
          <document>
            <head>
              <!--
                  sass_7.scss
                  ===========
                  p {
                    display: block;
                    /* border-bottom: ⠒; */
                  }
              -->
              <link type="text/css" rel="stylesheet" href="../../resources/sass/sass_7.scss" media="embossed"/>
            </head>
            <body>
              <p/>
            </body>
          </document>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result" select="//body"/>
    </x:context>
    <x:expect label="the result is wrong" type="compare">
      <x:document type="inline">
        <body>
          <p/>
        </body>
      </x:document>
    </x:expect>
  </x:scenario>
  
</x:description>
