<?xml version="1.0" encoding="utf-8"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:p="http://www.w3.org/ns/xproc"
               xmlns:pxi="http://www.daisy.org/ns/pipeline/xproc/internal"
               xmlns:css="http://www.daisy.org/ns/pipeline/braille-css">
  
  <x:script>
    <p:declare-step type="pxi:test" version="1.0">
      <p:input port="source"/>
      <p:output port="result" primary="true">
        <p:pipe step="flow-into" port="result"/>
      </p:output>
      <p:output port="flows" sequence="true">
        <p:pipe step="delete-xml-base" port="result"/>
      </p:output>
      <p:import href="../../main/resources/xml/flow-into.xpl"/>
      <css:flow-into name="flow-into"/>
      <p:for-each name="delete-xml-base">
        <p:iteration-source>
          <p:pipe step="flow-into" port="flows"/>
        </p:iteration-source>
        <p:output port="result"/>
        <p:delete match="@xml:base" />
      </p:for-each>
    </p:declare-step>
  </x:script>
  
  <x:scenario label="test_01">
    <x:call step="pxi:test">
      <x:input port="source">
        <x:document type="inline">
          <body style="text-align:right">
            <note style="display:list-item"
                  css:flow="footnote"
                  css:id="xyz"> foo </note>
          </body>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <body style="text-align:right">
          <css:_ css:id="xyz"/>
        </body>
      </x:document>
    </x:expect>
    <x:context label="flows">
      <x:document type="port" port="flows"/>
    </x:context>
    <x:expect label="flows" type="compare">
      <x:document type="inline">
        <css:_ css:flow="footnote">
          <note style="display: list-item; text-align: right"
                css:anchor="xyz"> foo </note>
        </css:_>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_02">
    <x:call step="pxi:test">
      <x:input port="source">
        <x:document type="inline">
          <_>
            <note css:flow="footnotes" css:id="x"> foo </note>
            <css:footnote-call css:anchor="x" style="content:'aaa'"/>
          </_>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <_>
          <css:footnote-call css:id="x" style="content:'aaa'"/>
        </_>
      </x:document>
    </x:expect>
    <x:context label="flows">
      <x:document type="port" port="flows"/>
    </x:context>
    <x:expect label="flows" type="compare">
      <x:document type="inline">
        <css:_ css:flow="footnotes">
          <note css:anchor="x"> foo </note>
        </css:_>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_03">
    <x:call step="pxi:test">
      <x:input port="source">
        <x:document type="inline">
          <_>
            <div css:id="x"/>
            <css:duplicate css:anchor="x" css:flow="foo"/>
          </_>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <_>
          <div css:id="x"/>
        </_>
      </x:document>
    </x:expect>
    <x:context label="flows">
      <x:document type="port" port="flows"/>
    </x:context>
    <x:expect label="flows" type="compare">
      <x:document type="inline">
        <css:_ css:flow="foo">
          <css:duplicate css:anchor="x"/>
        </css:_>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_04">
    <x:call step="pxi:test">
      <x:input port="source">
        <x:document type="inline">
          <_>
            <div css:id="x" css:flow="foo"/>
            <css:alternate css:anchor="x"/>
          </_>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <_>
          <css:alternate css:id="x"/>
        </_>
      </x:document>
    </x:expect>
    <x:context label="flows">
      <x:document type="port" port="flows"/>
    </x:context>
    <x:expect label="flows" type="compare">
      <x:document type="inline">
        <css:_ css:flow="foo">
          <div css:anchor="x"/>
        </css:_>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_05">
    <x:call step="pxi:test">
      <x:input port="source">
        <x:document type="inline">
          <body>
            <div css:flow="foo" css:id="x">
              <div css:flow="bar" css:id="y"/>
            </div>
          </body>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <body>
          <css:_ css:id="x"/>
        </body>
      </x:document>
    </x:expect>
    <x:context label="flows">
      <x:document type="port" port="flows"/>
    </x:context>
    <x:expect label="flows" type="compare">
      <x:document type="inline">
        <css:_ css:flow="foo">
          <div css:anchor="x">
            <css:_ css:id="y"/>
          </div>
        </css:_>
      </x:document>
      <x:document type="inline">
        <css:_ css:flow="bar">
          <div css:anchor="y"/>
        </css:_>
      </x:document>
    </x:expect>
  </x:scenario>
  
</x:description>
