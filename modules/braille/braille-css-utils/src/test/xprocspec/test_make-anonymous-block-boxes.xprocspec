  <x:scenario label="test_01">
    <x:call step="css:make-anonymous-block-boxes">
      <x:input port="source">
        <x:document type="inline">
          <css:_>
            <css:box type="block">
              <css:box type="inline"/>
              <css:box type="inline"/>
              <css:box type="block"/>
              <css:box type="inline"/>
            </css:box>
            <css:box type="inline"/>
          </css:_>
          </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <css:_>
          <css:box type="block">
            <css:box type="block">
              <css:box type="inline"/>
              <css:box type="inline"/>
            </css:box>
            <css:box type="block"/>
            <css:box type="block">
              <css:box type="inline"/>
            </css:box>
          </css:box>
          <css:box type="block">
            <css:box type="inline"/>
          </css:box>
        </css:_>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_02">
    <x:call step="css:make-anonymous-block-boxes">
      <x:input port="source">
        <x:document type="inline">
          <css:box type="block">
            <css:box type="inline">
              <css:box type="inline" name="css:before">⠿⠿</css:box>
              ⠤⠤⠤
            </css:box>
            <css:box type="block" name="css:after">
              <css:box type="inline">⠿⠿</css:box>
            </css:box>
          </css:box>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <css:box xmlns:css="http://www.daisy.org/ns/pipeline/braille-css" type="block">
          <css:box type="block">
            <css:box type="inline">
              <css:box type="inline" name="css:before">⠿⠿</css:box>
              ⠤⠤⠤
            </css:box>
          </css:box>
          <css:box type="block" name="css:after">
            <css:box type="inline">⠿⠿</css:box>
          </css:box>
        </css:box>
      </x:document>
    </x:expect>
  </x:scenario>
  
