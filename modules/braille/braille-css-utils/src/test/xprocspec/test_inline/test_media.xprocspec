<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://www.daisy.org/ns/xprocspec/xprocspec.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:px="http://www.daisy.org/ns/pipeline/xproc"
               script="http://www.daisy.org/pipeline/modules/css-utils/library.xpl">
  
  <x:scenario label="media attribute on style element">
    <x:call step="px:css-cascade">
      <x:input port="source">
        <x:document type="inline">
          <document>
            <head>
              <style media="embossed" type="text/css">
                p {
                  font-weight: bold;
                }
              </style>
              <style media="print" type="text/css">
                em {
                  font-weight: bold;
                }
              </style>
              <style media="all" type="text/css">
                p {
                  display: block;
                }
                em {
                  font-style: italic;
                }
              </style>
              <style media="screen" type="text/css">
                p {
                  text-align: center;
                }
              </style>
            </head>
            <body>
              <p>
                foo<em>bar</em>
              </p>
            </body>
          </document>
        </x:document>
      </x:input>
    </x:call>
    <x:scenario label="media-embossed">
      <x:call>
        <x:option name="media" select="'embossed'"/>
      </x:call>
      <x:context label="result">
        <x:document type="port" port="result" select="//body"/>
      </x:context>
      <x:expect label="result" type="compare">
        <x:document type="inline">
          <body>
            <p style="display: block;">
              foo<em>bar</em>
            </p>
          </body>
        </x:document>
      </x:expect>
    </x:scenario>
    <x:scenario label="media-print">
      <x:call>
        <x:option name="media" select="'print'"/>
      </x:call>
      <x:context label="result">
        <x:document type="port" port="result" select="//body"/>
      </x:context>
      <x:expect label="result" type="compare">
        <x:document type="inline">
          <body>
            <p>
              foo<em style="font-style: italic; font-weight: bold;">bar</em>
            </p>
          </body>
        </x:document>
      </x:expect>
    </x:scenario>
  </x:scenario>
  
  <x:scenario label="@media rule with media type">
    <x:call step="px:css-cascade">
      <x:input port="source">
        <x:document type="inline">
          <document>
            <head>
              <style type="text/css">
                @media embossed {
                  p {
                    display: block;
                    font-weight: bold;
                  }
                }
                @media print {
                  em {
                    display: block;
                    font-weight: bold;
                  }
                }
              </style>
            </head>
            <body>
              <p>
                foo<em>bar</em>
              </p>
            </body>
          </document>
        </x:document>
      </x:input>
      <x:option name="media" select="'embossed'"/>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result" select="//body"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <body>
          <p style="display: block;">
            foo<em>bar</em>
          </p>
        </body>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="@media rule with media query">
    <x:call step="px:css-cascade">
      <x:input port="source">
        <x:document type="inline">
          <document>
            <head>
              <style type="text/css">
                @media embossed AND (max-width:30) {
                  p {
                    display: inline;
                  }
                }
                @media embossed AND (min-width:31) {
                  p {
                    display: block;
                  }
                }
              </style>
            </head>
            <body>
              <p>
                foobar
              </p>
            </body>
          </document>
        </x:document>
      </x:input>
      <x:option name="media" select="'embossed AND (width:29)'"/>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result" select="//body"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <body>
          <p style="display: inline;">
            foobar
          </p>
        </body>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="@page inside @media rule" xfail="true">
    <x:documentation>
      Broken: @page inside @media does not work.
    </x:documentation>
    <x:call step="px:css-cascade">
      <x:input port="source">
        <x:document type="inline">
          <document>
            <head>
              <style type="text/css">
                @media embossed {
                  @page body {
                    size: 40 25
                  }
                  body {
                    page: body
                  }
                }
              </style>
            </head>
            <body>
              foobar
            </body>
          </document>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result" select="//body"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <body style="@page { size: 40 25; }">
          foobar
        </body>
      </x:document>
    </x:expect>
  </x:scenario>
  
</x:description>
