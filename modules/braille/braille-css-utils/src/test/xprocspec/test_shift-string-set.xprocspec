<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:p="http://www.w3.org/ns/xproc"
               xmlns:css="http://www.daisy.org/ns/pipeline/braille-css"
               script="../../main/resources/xml/shift-string-set.xpl">
  
  <x:scenario label="test_01">
    <x:call step="css:shift-string-set">
      <x:input port="source">
        <x:document type="inline">
          <css:_>
            <css:box type="block" css:string-set="foo 'x'">
              <css:box type="inline"/>
              <css:_ css:string-set="bar 'x'"/>
            </css:box>
            <css:_ css:string-set="bar 'y'"/>
            <css:box type="block">
              <css:box type="block">
                <css:box type="inline" css:string-set="bar 'z'"/>
              </css:box>
            </css:box>
          </css:_>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <css:_>
          <css:box type="block">
            <css:box type="inline" css:string-set="foo 'x'">
              <css:_ css:string-set="bar 'x'"/>
            </css:box>
            <css:_/>
          </css:box>
          <css:_/>
          <css:box type="block">
            <css:box type="block">
              <css:box type="inline" css:string-set="bar 'y', bar 'z'"/>
            </css:box>
          </css:box>
        </css:_>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_02">
    <x:call step="css:shift-string-set">
      <x:input port="source">
        <x:document type="inline">
          <css:_>
            <css:_ css:string-set="foo '1'"/>
            <css:box type="block">
              <css:box type="inline">
                <css:_ css:string-set="foo '2'"/>
              </css:box>
            </css:box>
            <css:box type="block" css:string-set="foo '3'">
              <css:box type="inline"/>
            </css:box>
          </css:_>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <css:_>
          <css:_/>
          <css:box type="block">
            <css:box type="inline" css:string-set="foo '1'">
              <css:_ css:string-set="foo '2'"/>
            </css:box>
          </css:box>
          <css:box type="block">
            <css:box type="inline" css:string-set="foo '3'"/>
          </css:box>
        </css:_>
      </x:document>
    </x:expect>
  </x:scenario>
  
</x:description>

