<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://www.daisy.org/ns/xprocspec/xprocspec.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
               xmlns:p="http://www.w3.org/ns/xproc"
               xmlns:css="http://www.daisy.org/ns/pipeline/braille-css"
               script="../../main/resources/xml/split.xpl">
  
  <x:scenario label="test_01">
    <x:call step="css:split">
      <x:option name="split-before" select="'*[@css:page or @css:counter-set-page]'"/>
      <x:option name="split-after" select="'*[@css:page]'"/>
      <x:input port="source">
        <x:document type="inline">
          <css:box type="block" css:page="size: 30 15">
            <front css:page="size: 30 15; @bottom-right { content: counter(page, lower-roman) }">
              <css:box> foo </css:box>
            </front>
            <body>
              <css:box> bar </css:box>
            </body>
            <rear>
              <css:box css:counter-set-page="1"> baz </css:box>
            </rear>
          </css:box>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <css:box type="block" part="first" css:page="size: 30 15"/>
      </x:document>
      <x:document type="inline">
        <css:box type="block" css:page="size: 30 15" part="middle">
          <front css:page="size: 30 15; @bottom-right { content: counter(page, lower-roman) }">
            <css:box> foo </css:box>
          </front>
        </css:box>
      </x:document>
      <x:document type="inline">
        <css:box type="block" css:page="size: 30 15" part="middle">
          <body>
            <css:box> bar </css:box>
          </body>
          <rear>
          </rear>
        </css:box>
      </x:document>
      <x:document type="inline">
        <css:box type="block" css:page="size: 30 15" part="last">
          <rear>
            <css:box css:counter-set-page="1"> baz </css:box>
          </rear>
        </css:box>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_02">
    <x:call step="css:split">
      <x:option name="split-before" select="'*[@css:counter-set-page]'"/>
      <x:input port="source">
        <x:document type="inline">
          <css:box type="block" css:counter-set-page="1">
            <css:box> foo </css:box>
            <css:box css:counter-set-page="2"> bar </css:box>
            <css:box> baz </css:box>
          </css:box>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <css:box type="block" css:counter-set-page="1" part="first">
          <css:box> foo </css:box>
        </css:box>
      </x:document>
      <x:document type="inline">
        <css:box type="block" part="last">
          <css:box css:counter-set-page="2"> bar </css:box>
          <css:box> baz </css:box>
        </css:box>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_03">
    <x:call step="css:split">
      <x:option name="split-before" select="'*[@css:page]'"/>
      <x:option name="split-after" select="'*[@css:page]'"/>
      <x:input port="source">
        <x:document type="inline">
          <_ css:page="foo">
            <css:box type="block">
              <css:_ css:page="bar">
                <css:box> xxx </css:box>
              </css:_>
              <css:box> xxx </css:box>
              <css:_ css:page="baz">
                <css:box> xxx </css:box>
              </css:_>
            </css:box>
          </_>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <_ css:page="foo">
          <css:box type="block" part="first"/>
        </_>
      </x:document>
      <x:document type="inline">
        <_ css:page="foo">
          <css:box type="block" part="middle">
            <css:_ css:page="bar">
              <css:box> xxx </css:box>
            </css:_>
          </css:box>
        </_>
      </x:document>
      <x:document type="inline">
        <_ css:page="foo">
          <css:box type="block" part="middle">
            <css:box> xxx </css:box>
          </css:box>
        </_>
      </x:document>
      <x:document type="inline">
        <_ css:page="foo">
          <css:box type="block" part="middle">
            <css:_ css:page="baz">
              <css:box> xxx </css:box>
            </css:_>
          </css:box>
        </_>
      </x:document>
      <x:document type="inline">
        <_ css:page="foo">
          <css:box type="block" part="last"/>
        </_>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_04">
    <x:call step="css:split">
      <x:option name="split-before" select="'css:box[preceding::css:box][@css:counter-set-page or @css:page-break-before=''right'']'"/>
      <x:input port="source">
        <x:document type="inline">
          <css:_>
            <css:box type="block">
              <css:box type="inline"> ⠤⠤⠤ </css:box>
            </css:box>
            <css:box type="block"
                     css:page-break-before="right">
              <css:box type="inline"> ⠤⠤⠤ </css:box>
            </css:box>
            <css:box type="block"
                     css:page-break-before="right">
              <css:box type="inline"> ⠤⠤⠤ </css:box>
            </css:box>
            <css:box type="block"
                     css:counter-set-page="10"
                     css:page-break-before="always">
              <css:box type="inline"> ⠤⠤⠤ </css:box>
            </css:box>
            <css:box type="block"
                     css:page-break-before="always">
              <css:box type="inline"> ⠤⠤⠤ </css:box>
            </css:box>
            <css:box type="block"
                     css:page-break-before="right">
              <css:box type="inline"> ⠤⠤⠤ </css:box>
            </css:box>
          </css:_>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <css:_>
          <css:box type="block">
            <css:box type="inline"> ⠤⠤⠤ </css:box>
          </css:box>
        </css:_>
      </x:document>
      <x:document type="inline">
        <css:_>
          <css:box type="block"
                   css:page-break-before="right">
            <css:box type="inline"> ⠤⠤⠤ </css:box>
          </css:box>
        </css:_>
      </x:document>
      <x:document type="inline">
        <css:_>
          <css:box type="block"
                   css:page-break-before="right">
            <css:box type="inline"> ⠤⠤⠤ </css:box>
          </css:box>
        </css:_>
      </x:document>
      <x:document type="inline">
        <css:_>
          <css:box type="block"
                   css:counter-set-page="10"
                   css:page-break-before="always">
            <css:box type="inline"> ⠤⠤⠤ </css:box>
          </css:box>
          <css:box type="block"
                   css:page-break-before="always">
            <css:box type="inline"> ⠤⠤⠤ </css:box>
          </css:box>
        </css:_>
      </x:document>
      <x:document type="inline">
        <css:_>
          <css:box type="block"
                   css:page-break-before="right">
            <css:box type="inline"> ⠤⠤⠤ </css:box>
          </css:box>
        </css:_>
      </x:document>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_05">
    <x:call step="css:split">
      <x:option name="split-before" select="'*[@css:page]'"/>
      <x:option name="split-after" select="'*[@css:page]'"/>
      <x:input port="source">
        <x:document type="inline">
          <css:box type="block" css:id="a">
            <css:box css:page="1"/>
            <css:box css:page="2" css:id="b">
              <css:box css:page="3"/>
              <css:box css:page="4" css:id="c"/>
              <css:box/>
            </css:box>
            <css:box css:page="4"/>
          </css:box>
        </x:document>
      </x:input>
    </x:call>
    <x:context label="result">
      <x:document type="port" port="result"/>
    </x:context>
    <x:expect label="result" type="compare">
      <x:document type="inline">
        <css:box type="block" css:id="a" part="first"/>
      </x:document>
      <x:document type="inline">
        <css:box type="block" part="middle">
          <css:box css:page="1"/>
        </css:box>
      </x:document>
      <x:document type="inline">
        <css:box type="block" part="middle"/>
      </x:document>
      <x:document type="inline">
        <css:box type="block" part="middle">
          <css:box css:page="2" css:id="b" part="first"/>
        </css:box>
      </x:document>
      <x:document type="inline">
        <css:box type="block" part="middle">
          <css:box css:page="2" part="middle">
            <css:box css:page="3"/>
          </css:box>
        </css:box>
      </x:document>
      <x:document type="inline">
        <css:box type="block" part="middle">
          <css:box css:page="2" part="middle"/>
        </css:box>
      </x:document>
      <x:document type="inline">
        <css:box type="block" part="middle">
          <css:box css:page="2" part="middle">
            <css:box css:page="4" css:id="c"/>
          </css:box>
        </css:box>
      </x:document>
      <x:document type="inline">
        <css:box type="block" part="middle">
          <css:box css:page="2" part="last">
            <css:box/>
          </css:box>
        </css:box>
      </x:document>
      <x:document type="inline">
        <css:box type="block" part="middle"/>
      </x:document>
      <x:document type="inline">
        <css:box type="block" part="middle">
          <css:box css:page="4"/>
        </css:box>
      </x:document>
      <x:document type="inline">
        <css:box type="block" part="last"/>
      </x:document>
    </x:expect>
  </x:scenario>
  
</x:description>
