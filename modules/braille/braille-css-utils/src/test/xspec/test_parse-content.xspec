<?xml version="1.0" encoding="utf-8"?>
<x:description xmlns:x="http://www.jenitennison.com/xslt/xspec"
               xmlns:css="http://www.daisy.org/ns/pipeline/braille-css"
               stylesheet="../../main/resources/xml/parse-content.xsl">
  
  <x:scenario label="test_01">
    <x:context>
      <doc>
        <body>
          <p style="display: block">
            <css:before css:content="'bar\A'"/>
            foo
          </p>
        </body>
      </doc>
    </x:context>
    <x:expect label="result">
      <doc>
        <body>
          <p style="display: block">
            <css:before>bar
</css:before>
            foo
          </p>
        </body>
      </doc>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_02">
    <x:context>
      <doc>
        <body>
          <p foo="bar">
            <css:after>
              <css:after css:content="attr(foo)"/>
            </css:after>
          </p>
        </body>
      </doc>
    </x:context>
    <x:expect label="result">
      <doc>
        <body>
          <p foo="bar">
            <css:after>
              <css:after>bar</css:after>
            </css:after>
          </p>
        </body>
      </doc>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_03">
    <x:context>
      <toc>
        <entry ref="h1" style="display: block">
          <css:after css:content="target-text(attr(ref)) ' '
                                  leader('⠄⠄') ' '
                                  target-counter(attr(ref), braille-page) ' '
                                  target-string(attr(ref), print-page)"/>
        </entry>
      </toc>
    </x:context>
    <x:expect label="result">
      <toc>
        <entry ref="h1" style="display: block">
          <css:after>
            <css:text target="h1"/>
            <css:leader pattern="⠄⠄"/>
            <css:counter target="h1" name="braille-page"/>
            <css:string target="h1" name="print-page"/>
          </css:after>
        </entry>
      </toc>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_04">
    <x:context>
      <toc>
        <entry ref="h1" style="display: block">
          <css:after css:content="leader('⠄⠄', 150%, center)"/>
        </entry>
      </toc>
    </x:context>
    <x:expect label="result">
      <toc>
        <entry ref="h1" style="display: block">
          <css:after>
            <css:leader pattern="⠄⠄" position="150%" alignment="center"/>
          </css:after>
        </entry>
      </toc>
    </x:expect>
  </x:scenario>
  
  <x:scenario label="test_05">
    <x:context>
      <foo>
        <css:after css:content="'⠄' '⠄'"/>
      </foo>
    </x:context>
    <x:expect label="result">
      <foo>
        <css:after>⠄⠄</css:after>
      </foo>
    </x:expect>
  </x:scenario>
  
</x:description>
