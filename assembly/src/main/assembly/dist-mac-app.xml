<?xml version="1.0"?>
<assembly>
  <id>mac-app</id>
  <formats>
    <format>dir</format>
  </formats>
  <baseDirectory>daisy-pipeline</baseDirectory>
  <componentDescriptors>
    <componentDescriptor>src/main/assembly/components/updater-mac.xml</componentDescriptor>
  </componentDescriptors>
  <fileSets>
    <fileSet>
      <directory>src/main/resources</directory>
      <includes>
        <include>etc/**</include>
        <include>NOTICE.txt</include>
        <include>README.txt</include>
      </includes>
      <excludes>
        <exclude>etc/pipeline.properties</exclude>
        <exclude>etc/felix.properties</exclude>
        <exclude>etc/org.apache.felix.fileinstall-modules.cfg</exclude>
      </excludes>
      <outputDirectory></outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/resources</directory>
      <includes>
        <include>etc/pipeline.properties</include>
      </includes>
      <filtered>true</filtered>
      <outputDirectory></outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/generated-resources</directory>
      <includes>
        <include>etc.jar</include>
      </includes>
      <outputDirectory></outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/jars</directory>
      <outputDirectory>system</outputDirectory>
      <includes>
        <include>common/**</include>
        <include>no-osgi/**</include>
        <include>gui/**</include>
        <include>volatile/**</include>
      </includes>
      <excludes>
        <exclude>common/linux</exclude>
        <exclude>common/linux/*</exclude>
        <exclude>common/mac</exclude>
        <exclude>common/mac/*</exclude>
        <exclude>common/win</exclude>
        <exclude>common/win/*</exclude>
        <exclude>gui/bootstrap/linux</exclude>
        <exclude>gui/bootstrap/linux/*</exclude>
        <exclude>gui/bootstrap/mac</exclude>
        <exclude>gui/bootstrap/mac/*</exclude>
        <exclude>gui/bootstrap/win</exclude>
        <exclude>gui/bootstrap/win/*</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>target/jars/gui/bootstrap/mac</directory>
      <outputDirectory>system/gui/bootstrap</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/jars/common/mac</directory>
      <outputDirectory>system/common</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
