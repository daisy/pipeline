<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.daisy</groupId>
  <artifactId>webapi-integration</artifactId>
  <packaging>jar</packaging>
  <version>1.0.0-SNAPSHOT</version>
  <scm>
    <connection>scm:git:git://github.com/daisy/pipeline-assembly.git</connection>
    <developerConnection>scm:git:https://github.com/daisy/pipeline-assembly.git</developerConnection>
    <url>https://github.com/daisy/pipeline-assembly.git</url>
  </scm>
  <properties>
    <slf4j.version>1.7.5</slf4j.version>
    <guava.version>15.0</guava.version>
    <pipeline.version>1.8.1</pipeline.version>
  </properties>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.8.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.daisy.pipeline</groupId>
      <artifactId>clientlib-java-jaxb</artifactId>
      <version>1.0.0-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.daisy.pipeline</groupId>
      <artifactId>webservice-jaxb</artifactId>
      <version>1.0.0-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
      <version>${guava.version}</version>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>${slf4j.version}</version>

    </dependency>
<dependency>
	<groupId>org.slf4j</groupId>
	<artifactId>slf4j-simple</artifactId>
	<version>${slf4j.version}</version>
</dependency>
    
    <dependency>
      <groupId>commons-io</groupId>
      <artifactId>commons-io</artifactId>
      <version>2.4</version>
    </dependency>
  </dependencies>
  <build>
    <pluginManagement>
         <plugins>
             <plugin>
                 <artifactId>maven-compiler-plugin</artifactId>
                 <configuration>
                     <source>11</source>
                     <target>11</target>
                     <compilerArgument></compilerArgument>
                 </configuration>
             </plugin>
         </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.17</version>
        <configuration>
          <systemProperties>
            <property>
              <name>pipeline.path</name>
              <value>${project.build.directory}/checkout/target/pipeline2-${pipeline.version}/daisy-pipeline/</value>
              <!--<value>${project.build.directory}/../../../pipeline-assembly/target/dev-launcher/</value>-->
            </property>
          </systemProperties>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-scm-plugin</artifactId>
        <version>1.9</version>
        <executions>
          <execution>
            <id>fetch_assembly</id>
            <phase>compile</phase>
            <goals>
              <goal>bootstrap</goal>
            </goals>
            <configuration>
              <scmVersion>release/1.8.1</scmVersion>
	      <scmVersionType>branch</scmVersionType>
              <goals>install</goals>
              <profiles>!dev-launcher</profiles>

            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
